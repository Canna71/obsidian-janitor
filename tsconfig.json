{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"removeComments": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": false,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
		"jsx": "react"
	},
	"include": [
		"./src/**/*.ts", "./src/**/*.tsx"
	]
} 
